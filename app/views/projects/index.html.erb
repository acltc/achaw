<div class="container">
  <table class="table idx-table">
    <thead>
      <tr>
        <th><h2>Portfolio Projects</h2></th>
        <th><%= link_to "New Project", new_project_path, class: "btn btn-info btn-md" %></th>
      </tr>
    </thead>
    <tbody>
      <%  @projects.each do |project| %>
        <tr>
          <td> <%= link_to "#{project.title}", project_path(project) %> </td>
          <td> <%= link_to "Edit", edit_project_path(project), class: "btn btn-warning btn-sm" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>