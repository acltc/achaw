<div class="container">
  <table class="table table-striped idx-table">
    <thead>
      <tr>
        <th><h2>All Admins</h2></th>
        <th><%= link_to "New Admin", new_admin_path, class: "btn btn-info btn-md" %></th>
      </tr>
    </thead>
    <tbody>
      <%  @admins.each do |admin| %>
        <tr>
          <td> <%= link_to "#{admin.first_name} #{admin.last_name}", admin_path(admin) %> </td>
          <td> <%= link_to "Edit", edit_admin_path(admin), class: "btn btn-warning btn-sm" %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>